             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RodskaNote.Controls.Ribbon"
             mc:Ignorable="d" 
             >
    <Grid Width="Auto" MinWidth="450" MinHeight="800" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="50"></RowDefinition>
            <RowDefinition Height="1*" MinHeight="50" ></RowDefinition>
            <RowDefinition Height="18*" MinHeight="700"></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Grid.RowSpan="1" x:Name="CommandsFilter">
            
        </ComboBox>
        <ListBox Grid.Row="2" x:Name="CommandsBox">
            
        </ListBox>
    </Grid>
</UserControl>
